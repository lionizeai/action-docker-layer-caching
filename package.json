{
  "name": "action-docker-layer-cache",
  "version": "0.0.0",
  "main": "dist/restore/index.js",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/satackey/action-docker-layer-caching.git"
  },
  "author": "satackey <21271711+satackey@users.noreply.github.com>",
  "license": "MIT",
  "dependencies": {
    "@actions/cache": "^1.0.6",
    "@actions/core": "^1.2.6",
    "@actions/exec": "^1.0.4",
    "@types/recursive-readdir": "^2.2.0",
    "actions-exec-listener": "0.1.0",
    "crypto": "^1.0.1",
    "native-promise-pool": "^3.16.0",
    "recursive-readdir": "^2.2.2",
    "string-format": "^2.0.0",
    "typescript-is": "^0.17.1"
  },
  "devDependencies": {
    "@babel/core": "^7.13.8",
    "@tsconfig/node12": "^1.0.7",
    "@types/jest": "^26.0.20",
    "@types/nock": "^11.1.0",
    "@types/node": "^14.14.20",
    "@types/string-format": "^2.0.0",
    "@typescript-eslint/parser": "^4.12.0",
    "@vercel/ncc": "^0.27.0",
    "babel-loader": "^8.2.2",
    "eslint": "^7.21.0",
    "eslint-plugin-github": "^4.1.2",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "4",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "jest-junit": "^12.0.0",
    "js-yaml": "^4.0.0",
    "lint-staged": "^10.5.4",
    "nock": "^13.0.10",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.14",
    "ts-node": "^9.1.1",
    "ttypescript": "^1.5.12",
    "typescript": "^4.2.3",
    "webpack": "^5.24.3",
    "webpack-cli": "^4.5.0"
  },
  "scripts": {
    "test": "tsc --noEmit && NODE_ENV=testing jest --coverage",
    "test-ci": "tsc --noEmit && NODE_ENV=testing jest --ci --reporters=default --reporters=jest-junit",
    "format": "prettier --write src/ .github/ __tests__/",
    "format-check": "prettier --check src/**/*.ts",
    "lint": "eslint --fix **/*.ts --cache",
    "build": "tsc && ncc build -o dist/restore src/restore.ts && ncc build -o dist/save src/save.ts",
    "release": "yarn run format && yarn run lint && yarn run build && git add -f dist",
    "all": "yarn run build && yarn run format && yarn run lint && git add -f dist && yarn test"
  },
  "keywords": [
    "actions",
    "node",
    "cache",
    "docker",
    "containers"
  ],
  "jest": {
    "testPathIgnorePatterns": [
      "/helpers/",
      "/node_modules/"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "jest-junit": {
    "suiteNameTemplate": "{filepath}",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}"
  },
  "lint-staged": {
    "**/*.{yml,ts,json}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn build; git add dist",
      "pre-add": "yarn format"
    }
  }
}
